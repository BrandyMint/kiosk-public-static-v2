            .b-item-list__paginator
              .pagination
                %li.prev
                  %a{href: '#'}
                    &lsaquo;
                - for i in [1..6]
                  - if i == 1
                    %li.page.active
                      %a{href: '#'}
                        = i
                  - else if i == 4
                    %li.page.disabled.gap
                      %a{href: '#'} ...
                  - else
                    %li.page
                      %a{href: '#'}
                        = i
                %li.next
                  %a{href: '#'}
